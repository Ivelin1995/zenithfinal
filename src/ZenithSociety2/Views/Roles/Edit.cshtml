@model ZenithSociety2.Models.RoleViewModels.IdentityRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
